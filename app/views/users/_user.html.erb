<div id="<%= dom_id user %>" class="scaffold_record">
  <p>
    <strong>Username:</strong>
    <%= user.userName %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= user.password %>
  </p>

  <p>
    <strong>Portfolio:</strong>
    <%= user.portfolio %>
  </p>

  <p>
    <%= link_to "Show this user", user %>
  </p>
